<?xml version="1.0" encoding="utf-8"?>
<Defs>

  <!-- 制造小型存储磁盘 -->
  <RecipeDef>
    <defName>Make_DigitalStorage_DiskSmall</defName>
    <label>制造小型存储磁盘</label>
    <description>制造一个小型存储磁盘，可以安装在磁盘柜中以扩展存储容量 500。</description>
    <jobString>制造小型存储磁盘。</jobString>
    <workAmount>1500</workAmount>
    <workSpeedStat>GeneralLaborSpeed</workSpeedStat>
    <effectWorking>Smith</effectWorking>
    <soundWorking>Recipe_Machining</soundWorking>
    <recipeUsers>
      <li>TableMachining</li>
    </recipeUsers>
    <skillRequirements>
      <Crafting>6</Crafting>
    </skillRequirements>
    <ingredients>
      <li>
        <filter>
          <thingDefs>
            <li>Steel</li>
          </thingDefs>
        </filter>
        <count>50</count>
      </li>
      <li>
        <filter>
          <thingDefs>
            <li>Plasteel</li>
          </thingDefs>
        </filter>
        <count>25</count>
      </li>
      <li>
        <filter>
          <thingDefs>
            <li>ComponentIndustrial</li>
          </thingDefs>
        </filter>
        <count>25</count>
      </li>
    </ingredients>
    <fixedIngredientFilter>
      <thingDefs>
        <li>Steel</li>
        <li>Plasteel</li>
        <li>ComponentIndustrial</li>
      </thingDefs>
    </fixedIngredientFilter>
    <products>
      <DigitalStorage_DiskSmall>1</DigitalStorage_DiskSmall>
    </products>
    <researchPrerequisite>DigitalStorage_DiskExpansion</researchPrerequisite>
  </RecipeDef>

