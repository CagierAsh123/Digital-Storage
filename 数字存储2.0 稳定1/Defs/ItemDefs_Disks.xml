<?xml version="1.0" encoding="utf-8"?>
<Defs>

  <!-- 磁盘基类 -->
  <ThingDef Name="DigitalStorage_DiskBase" Abstract="True">
    <category>Item</category>
    <thingClass>ThingWithComps</thingClass>
    <drawerType>MapMeshOnly</drawerType>
    <useHitPoints>true</useHitPoints>
    <selectable>true</selectable>
    <altitudeLayer>Item</altitudeLayer>
    <alwaysHaulable>true</alwaysHaulable>
    <pathCost>14</pathCost>
    <rotatable>false</rotatable>
    <drawGUIOverlay>true</drawGUIOverlay>
    <soundInteract>Metal_Drop</soundInteract>
    <soundDrop>Metal_Drop</soundDrop>
    <statBases>
      <MaxHitPoints>50</MaxHitPoints>
      <Flammability>0.2</Flammability>
      <DeteriorationRate>1.0</DeteriorationRate>
    </statBases>
    <thingCategories>
      <li>DigitalStorageItems</li>
    </thingCategories>
    <comps>
      <li Class="CompProperties_Forbiddable"/>
    </comps>
  </ThingDef>

  <!-- 小型存储磁盘 -->
  <ThingDef ParentName="DigitalStorage_DiskBase">
    <defName>DigitalStorage_DiskSmall</defName>
    <label>小型存储磁盘</label>
    <description>一个小型存储磁盘，可以安装在磁盘柜中以将存储容量扩展 500 个物品。</description>
    <graphicData>
      <texPath>磁盘-小</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <stackLimit>1</stackLimit>
    <statBases>
      <Mass>0.5</Mass>
      <MarketValue>250</MarketValue>
    </statBases>
    <costList>
      <Steel>50</Steel>
      <Plasteel>25</Plasteel>
      <ComponentIndustrial>25</ComponentIndustrial>
    </costList>
  </ThingDef>

  <!-- 中型存储磁盘 -->
  <ThingDef ParentName="DigitalStorage_DiskBase">
    <defName>DigitalStorage_DiskMedium</defName>
    <label>中型存储磁盘</label>
    <description>一个中型存储磁盘，可以安装在磁盘柜中以将存储容量扩展 1000 个物品。</description>
    <graphicData>
      <texPath>磁盘-中</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <stackLimit>1</stackLimit>
    <statBases>
      <Mass>1</Mass>
      <MarketValue>500</MarketValue>
    </statBases>
    <costList>
      <Steel>125</Steel>
      <Plasteel>40</Plasteel>
      <ComponentIndustrial>40</ComponentIndustrial>
    </costList>
  </ThingDef>

  <!-- 大型存储磁盘 -->
  <ThingDef ParentName="DigitalStorage_DiskBase">
    <defName>DigitalStorage_DiskLarge</defName>
    <label>大型存储磁盘</label>
    <description>一个大型存储磁盘，可以安装在磁盘柜中以将存储容量扩展 2000 个物品。</description>
    <graphicData>
      <texPath>磁盘-大</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <stackLimit>1</stackLimit>
    <statBases>
      <Mass>2</Mass>
      <MarketValue>1000</MarketValue>
    </statBases>
    <costList>
      <Steel>250</Steel>
      <Plasteel>50</Plasteel>
      <ComponentIndustrial>50</ComponentIndustrial>
    </costList>
  </ThingDef>

</Defs>
